# Claude Code Production Environment Configuration
# Copy to .env.production and update with your actual values

# Application Settings
NODE_ENV=production
PORT=3001
APP_URL=https://claude-code.com
API_URL=https://api.claude-code.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_EXPIRY=24h

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_API_BASE_URL=https://api.anthropic.com

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/claude_code
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=2
DATABASE_SSL=true

# Redis Configuration
REDIS_URL=redis://username:password@host:6379
REDIS_TLS=true
REDIS_POOL_MAX=10

# CORS Configuration
ALLOWED_ORIGINS=https://claude-code.com,https://www.claude-code.com,https://claude-code.vercel.app

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60
RATE_LIMIT_BLOCK_DURATION=300

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=js,ts,jsx,tsx,py,md,txt,json,yml,yaml,css,html

# Email Configuration (for notifications)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@claude-code.com

# OAuth Configuration
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=https://claude-code.com/auth/github/callback

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Monitoring Configuration
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_PORT=9090

# TTS Configuration
TTS_ENABLED=true
TTS_VOICE=Alex
TTS_RATE=200
TTS_VOLUME=0.8

# Feature Flags
FEATURE_MOBILE_APP=true
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_AI_SUGGESTIONS=true
FEATURE_FILE_HISTORY=true
FEATURE_NOTIFICATIONS=true

# Third-party Integrations
VERCEL_TOKEN=your-vercel-deployment-token
RAILWAY_TOKEN=your-railway-deployment-token
DOCKER_REGISTRY=ghcr.io/yourusername/claude-code

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
S3_BUCKET=claude-code-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
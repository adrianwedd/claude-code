{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "server/Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "node server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "numReplicas": 2
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3001",
        "JWT_SECRET": "${{Railway.JWT_SECRET}}",
        "CLAUDE_API_KEY": "${{Railway.CLAUDE_API_KEY}}",
        "ALLOWED_ORIGINS": "https://claude-code.vercel.app,https://claude-code.com",
        "REDIS_URL": "${{Railway.REDIS_PRIVATE_URL}}",
        "DATABASE_URL": "${{Railway.DATABASE_PRIVATE_URL}}",
        "SENTRY_DSN": "${{Railway.SENTRY_DSN}}",
        "LOG_LEVEL": "info",
        "RATE_LIMIT_POINTS": "100",
        "RATE_LIMIT_DURATION": "60"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging", 
        "PORT": "3001",
        "JWT_SECRET": "${{Railway.JWT_SECRET}}",
        "CLAUDE_API_KEY": "${{Railway.CLAUDE_API_KEY}}",
        "ALLOWED_ORIGINS": "https://claude-code-staging.vercel.app",
        "REDIS_URL": "${{Railway.REDIS_PRIVATE_URL}}",
        "DATABASE_URL": "${{Railway.DATABASE_PRIVATE_URL}}",
        "LOG_LEVEL": "debug",
        "RATE_LIMIT_POINTS": "200",
        "RATE_LIMIT_DURATION": "60"
      }
    }
  },
  "services": [
    {
      "name": "claude-code-server",
      "source": {
        "type": "dockerfile",  
        "dockerfile": "server/Dockerfile"
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": 3001
      }
    },
    {
      "name": "redis",
      "source": {
        "type": "image",
        "image": "redis:7-alpine"
      },
      "variables": {
        "REDIS_ARGS": "--maxmemory 256mb --maxmemory-policy allkeys-lru"
      }
    },
    {
      "name": "postgres",
      "source": {
        "type": "image",
        "image": "postgres:15-alpine"
      },
      "variables": {
        "POSTGRES_DB": "claude_code",
        "POSTGRES_USER": "claude",
        "POSTGRES_PASSWORD": "${{Railway.POSTGRES_PASSWORD}}"
      }
    }
  ]
}
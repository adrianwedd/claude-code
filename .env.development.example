# Claude Code Development Environment Configuration
# Copy to .env.development and update as needed

# Application Settings
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRY=24h

# Claude API Configuration
CLAUDE_API_KEY=your-dev-claude-api-key-here
CLAUDE_API_BASE_URL=https://api.anthropic.com

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://claude:password@localhost:5432/claude_code_dev
DATABASE_POOL_MAX=5
DATABASE_POOL_MIN=1
DATABASE_SSL=false

# Redis Configuration (Local Redis)
REDIS_URL=redis://localhost:6379
REDIS_TLS=false
REDIS_POOL_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Rate Limiting (More lenient for development)
RATE_LIMIT_POINTS=1000
RATE_LIMIT_DURATION=60
RATE_LIMIT_BLOCK_DURATION=60

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=simple
SENTRY_DSN=

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=js,ts,jsx,tsx,py,md,txt,json,yml,yaml,css,html,sh

# Email Configuration (Use Mailhog for dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=dev@claude-code.local

# OAuth Configuration (GitHub Dev App)
GITHUB_CLIENT_ID=your-dev-github-client-id
GITHUB_CLIENT_SECRET=your-dev-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Security Configuration (Less strict for dev)
BCRYPT_ROUNDS=4
SESSION_SECRET=dev-session-secret
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Monitoring Configuration
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=10000
METRICS_PORT=9090

# TTS Configuration
TTS_ENABLED=true
TTS_VOICE=Alex
TTS_RATE=200
TTS_VOLUME=0.5

# Feature Flags (All enabled for development)
FEATURE_MOBILE_APP=true
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_AI_SUGGESTIONS=true
FEATURE_FILE_HISTORY=true
FEATURE_NOTIFICATIONS=true
FEATURE_DEBUG_MODE=true

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true
DEBUG_SQL=false

# Mock Services (for offline development)
MOCK_CLAUDE_API=false
MOCK_GITHUB_API=false
MOCK_EMAIL_SERVICE=true

# Backup Configuration (Disabled for dev)
BACKUP_ENABLED=false